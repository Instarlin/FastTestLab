generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  username String @unique
  email    String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  chats    Chat[]
}

model Card {
  id       String @id @default(cuid())
  title    String
  description String
  Color    String
  Tags     String
  Image    String
}

model Chat {
  id          String    @id @default(cuid())
  title       String
  pinned      Boolean   @default(false)
  lastMessage String?
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  messages    Message[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Message {
  id        String   @id @default(cuid())
  content   String
  role      String
  files     String[]
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
  chatId    String
  createdAt DateTime @default(now())
}